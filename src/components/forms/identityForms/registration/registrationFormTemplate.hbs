<div class="form-wrapper">
    {{#> FormContainer className="form-content" }}
        {{{ Title text="Регистрация" }}}
        <div class="form-content__form-block form-content__fields">
            {{{ TextField label="Почта" type="email" placeholder="Почта" name="email" ref="email" }}}
            {{{ TextField label="Логин" type="text" placeholder="Логин" name="login" ref="login" }}}
            {{{ TextField label="Фамилия" type="text" placeholder="Фамилия" name="second_name" ref="secondName" }}}
            {{{ TextField label="Имя" type="text" placeholder="Имя" name="first_name" ref="firstName" }}}
            {{{ TextField label="Отчество" type="text" placeholder="Отчество" name="midle_name" ref="midleName" }}}
            {{{ TextField label="Телефон" type="text" type="tel" placeholder="Телефон" name="phone" ref="phone" }}}
            {{{ TextField label="Пароль" type="text" type="password" placeholder="Пароль" name="password" ref="password" }}}
            {{{ TextField label="Повторить пароль" type="password" placeholder="Повторить пароль" name="repeate_password" ref="repeatePassword" }}}
        </div>
        <div class="form-content__form-block form-content__actions">
            {{{ Button text="Зарегистрироваться" type="prymary" goToPage="chats" onClick=onRegister }}}
            {{{ Button text="Войти" type="secondary" goToPage="login" onClick=onLogin }}}
        </div>
    {{/FormContainer}}
</div>

{{#> FormContainer className="profile__container" }}
    <div class="profile__avatar">
        {{{ Avatar }}}
    </div>
    <div class="profile__part">
        {{{ 
            InlineTextEditable label="Старый пароль" 
                isEdit=true 
                name="oldPassword" 
                type="password" 
                ref="oldPassword" 
                validate=validate.oldPassword 
        }}}
        {{{ 
            InlineTextEditable label="Новый пароль" 
                isEdit=true 
                name="newPassword" 
                type="password" 
                ref="newPassword" 
                validate=validate.newPassword 
        }}}
        {{{ 
            InlineTextEditable label="Повторите новый пароль" 
                isEdit=true 
                name="repeateNewPassword" 
                type="password" 
                ref="repeateNewPassword" 
                validate=validate.repeateNewPassword 
        }}}
    </div>
    <div class="profile__part profile__buttons-standart-container">
        {{{ Button text="Сохранить" type="prymary" goToPage="profile" className="profile__buttons-standart-container_btn-sized" onClick=onSave }}}
    </div>
{{/FormContainer}}

<div class="itxt-editable">
    <span class="itxt-editable__label">{{label}}</span>
    {{#if isEdit}}
        {{{
            InputBase name=name
            ref="input"    
            type=type
            value=value
            placeholder=placeholder
            className="itxt-editable__input" 
        }}}
    {{else}}
        <span class="itxt-editable__value">{{value}}</span>
    {{/if}}
</div>

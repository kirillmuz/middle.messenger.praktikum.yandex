<div class="text-field">
    <label class="text-field__label" for{{name}}>{{label}}</label>
    <input 
        name="{{name}}"
        class="text-field__input" 
        type="{{type}}" 
        value="{{value}}" 
        placeholder="{{placeholder}}" 
    />
    <span class="text-field__error">{{errorMessage}}</span>
</div>
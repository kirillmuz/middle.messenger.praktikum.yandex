<div class="fullscreen-page">
    {{{ StreachButtonLeft onClick=returnToChats }}}
    <div class="profile">
        <div class="profile__container">
            <div class="profile__avatar">
                {{{ Avatar avatar=user.avatar }}}
                {{{ Title text=user.firstName type="bold" }}}
            </div>
            <div class="profile__part">
                {{{ InlineTextEditable label="Почта" isEdit=false name="email" type="email" value=user.email }}}
                {{{ InlineTextEditable label="Логин" isEdit=false name="login" type="text" value=user.login }}}
                {{{ InlineTextEditable label="Имя" isEdit=false name="firstname" type="text" value=user.firstName }}}
                {{{ InlineTextEditable label="Фамилия" isEdit=false name="lastname" type="text" value=user.secondName }}}
                {{{ InlineTextEditable label="Никнейм" isEdit=false name="nikname" type="text" value=user.displayName }}}
                {{{ InlineTextEditable label="Телефон" isEdit=false name="phone" type="phone" value=user.phone }}}
            </div>
            <div class="profile__part">
                {{{ InlineButton text="Изменить данные" type="secondary" onClick=openChangeDataPage }}}
                {{{ InlineButton text="Изменить пароль" type="secondary" onClick=openChangePasswordPage }}}
                {{{ InlineButton text="Выйти" type="important" onClick=logOut }}}
            </div>
        </div>
    </div>
</div>
